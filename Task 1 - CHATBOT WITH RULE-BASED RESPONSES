def simple_chatbot():
    print("Hello! I'm a simple chatbot. How can I assist you today?")
    
    while True:
        # Get user input
        user_input = input("You: ").strip().lower()
        
        # Check for exit condition
        if user_input in ["exit", "quit", "bye"]:
            print("Chatbot: Goodbye! Have a great day!")
            break
        
        # Respond based on user input
        elif "hello" in user_input or "hi" in user_input:
            print("Chatbot: Hi there! How can I help you?")
        
        elif "your name" in user_input:
            print("Chatbot: I'm a simple chatbot created to assist you.")
        
        elif "how are you" in user_input:
            print("Chatbot: I'm just a program, but I'm here and ready to help!")
        
        elif "what is your purpose" in user_input:
            print("Chatbot: My purpose is to assist you with predefined responses and provide information.")
        
        elif "help" in user_input:
            print("Chatbot: You can ask me about my name, purpose, or just say hello.")
        
        else:
            print("Chatbot: Sorry, I didn't understand that. Can you ask something else?")
            
# Run the chatbot
if __name__ == "__main__":
    simple_chatbot()
